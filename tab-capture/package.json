{
  "name": "tab-capture",
  "displayName": "Tab capture",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "elango",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "chrome-types": "^0.1.337",
    "html2canvas": "^1.4.1",
    "plasmo": "0.90.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "tabCapture",
      "downloads",
      "activeTab",
      "storage"
    ]
  }
}
